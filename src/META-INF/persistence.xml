	<!-- Unidad de persistencia para UPAlumnos -->
	<persistence-unit name="UPAlumnos"
		transaction-type="RESOURCE_LOCAL">
		<!-- Provider Hibernate -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- Registrar las clases de las entidades -->
		<class>tema4mapeobjetorelacional.ejerciciosJPAalumnos.beans.AlumnoJPA</class>
		<class>tema4mapeobjetorelacional.ejerciciosJPAalumnos.beans.NotaJPA</class>
		<class>tema4mapeobjetorelacional.ejerciciosJPAalumnos.beans.ProfesorJPA</class>
		<class>tema4mapeobjetorelacional.ejerciciosJPAalumnos.beans.ModuloJPA</class>
		<class>tema4mapeobjetorelacional.ejerciciosJPAalumnos.beans.ImparteJPA</class>
		<class>tema4mapeobjetorelacional.ejerciciosJPAalumnos.beans.ImparteId</class>
		<class>tema4mapeobjetorelacional.ejerciciosJPAalumnos.beans.NotaId</class>

		<!-- Excluir clases no listadas explícitamente -->
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<!-- Configuración de conexión para la base de datos -->
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/alumnosbd" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- Configuración de Hibernate -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL8Dialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" /> <!-- Actualiza el esquema automáticamente -->

			<!-- Ajustes adicionales para formatear las consultas SQL -->
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>





